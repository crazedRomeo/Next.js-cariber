{
  "kind": "collectionType",
  "collectionName": "episodes",
  "info": {
    "singularName": "episode",
    "pluralName": "episodes",
    "displayName": "Episode",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "episode_number": {
      "type": "integer",
      "required": true
    },
    "video": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "videos"
      ]
    },
    "episode_name": {
      "type": "string"
    },
    "duration": {
      "type": "float",
      "default": 0.00
    },
    "description": {
      "type": "richtext"
    },
    "publish_date": {
      "type": "datetime"
    },
    "link_video": {
      "type": "string"
    },
    "course": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course.course",
      "inversedBy": "episodes"
    }
  }
}
